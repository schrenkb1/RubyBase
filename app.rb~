# app.rb
# http://www.sinatrarb.com/intro.html

require 'sinatra'
set :views, 'views'
set :session_secret, 'M3ga8yt3 5tuff'

class HelloWorldApp < Sinatra::Base
  get '/' do
    @title = "Home Page"
    erb :"pages/home"
  end

  get '/convert' do
    status 400
    headers \
      "Allow"   => "BREW, POST, GET, PROPFIND, WHEN",
      "TIDAL"   => "Adiend@3 Idne#2e3"
    @title = "Convert"
    erb :"pages/convert"
  end

  get '/match' do
    @title = "Match"
    erb :"pages/match"
  end

  get '/value/:name' do
    "Hello, #{params[:name]}!"
  end

  not_found do
    @title = "404 Not Found"
    erb :"service/notfound"
  end
end

